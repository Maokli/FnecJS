{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "jsx": "react",
    "jsxFactory": "Fnec.createElement",
    "jsxFragmentFactory": "Fnec.Fragment",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "moduleResolution": "node"
  },
  "include": ["packages/fnec/src/**/*", "jest/**/*"],
  "exclude": ["node_modules"]
}